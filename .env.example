# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
DEBUG=false
ENVIRONMENT=development
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:8000

# CORS and Trusted Hosts
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:8501
TRUSTED_HOSTS=localhost,127.0.0.1,0.0.0.0
ALLOW_LOCALHOST_IN_PROD=true

# Network Security
ENABLE_NETWORK_RESTRICTIONS=false

# Security Headers
CSP_ENABLED=false
HSTS_ENABLED=false
SECURE_COOKIES=false
X_FRAME_OPTIONS=SAMEORIGIN
X_CONTENT_TYPE_OPTIONS=nosniff

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///path/to/your/alchemize.db
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=your_db_name

# =============================================================================
# AI & API KEYS
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# PAYMENT PROCESSING (STRIPE)
# =============================================================================
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# CLOUD STORAGE (FIREBASE)
# =============================================================================
FIREBASE_CREDENTIALS_JSON=your_firebase_credentials_here
FIREBASE_STORAGE_BUCKET=your_storage_bucket_here