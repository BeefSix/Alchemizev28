# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
DEBUG=false
ENVIRONMENT=production
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# SECURITY CONFIGURATION (CRITICAL - CHANGE ALL VALUES!)
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-here-change-this-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# CORS and Trusted Hosts (Production)
FRONTEND_URL=https://yourdomain.com
ADMIN_URL=https://admin.yourdomain.com
TRUSTED_HOSTS=yourdomain.com,api.yourdomain.com
ALLOW_LOCALHOST_IN_PROD=false

# Network Security (Production)
# Set to 'true' to enable strict network restrictions
ENABLE_NETWORK_RESTRICTIONS=false

# Security Headers
CSP_ENABLED=true
HSTS_ENABLED=true
SECURE_COOKIES=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///./zuexis.db
# For production PostgreSQL:
# DATABASE_URL=postgresql://username:password@host:port/database_name
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DB=zuexis_db

# =============================================================================
# REDIS & CELERY CONFIGURATION
# =============================================================================
# Redis Configuration (with Authentication)
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# AI API KEYS
# =============================================================================
# OpenAI API Key (required for video processing)
OPENAI_API_KEY=your_openai_api_key_here

# Celery Configuration (will use Redis settings above if not specified)
CELERY_BROKER_URL=redis://:your_secure_redis_password_here@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:your_secure_redis_password_here@localhost:6379/0
REDIS_URL=redis://:your_secure_redis_password_here@localhost:6379/0

# =============================================================================
# API KEYS & EXTERNAL SERVICES (NEVER COMMIT REAL VALUES!)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Firebase Configuration (Use environment variables in production)
FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project-id"}
FIREBASE_STORAGE_BUCKET=gs://your-bucket-name.firebasestorage.appspot.com

# =============================================================================
# FILE UPLOAD & PROCESSING CONFIGURATION
# =============================================================================
MAX_FILE_SIZE_MB=500
UPLOAD_DIR=./uploads
STATIC_GENERATED_DIR=./static/generated
ALLOWED_VIDEO_EXTENSIONS=.mp4,.avi,.mov,.mkv,.webm,.flv,.wmv
MAX_FILES_PER_USER_PER_DAY=50

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10
MAX_REQUESTS_PER_MINUTE=60
BRUTE_FORCE_PROTECTION=true

# Monitoring and Alerting
MONITORING_ENABLED=true
ALERT_EMAIL=admin@yourcompany.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# GPU Configuration (Optional)
USE_GPU=false
GPU_MEMORY_LIMIT=0.8

# Content Generation
DEFAULT_CONTENT_LENGTH=medium
MAX_CONTENT_REQUESTS_PER_DAY=100

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
REMEMBER_ME_DAYS=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Security Headers
ENABLE_SECURITY_HEADERS=true
CSP_ENABLED=true
HSTS_MAX_AGE=31536000

# Development Settings (Only for development)
# STREAMLIT_SERVER_PORT=8501
# FASTAPI_SERVER_PORT=8000
# AUTO_RELOAD=true