# =============================================================================
# ZUEXIS AI - Environment Configuration Sample
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real secrets to version control

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
APP_NAME=Zuexis AI
API_V1_STR=/api/v1
ENVIRONMENT=development
DEBUG=false

# =============================================================================
# SECURITY SETTINGS (REQUIRED)
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED IN PRODUCTION)
# =============================================================================
# PostgreSQL (production) or SQLite (development)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# For development only: DATABASE_URL=sqlite:///./app.db

# =============================================================================
# REDIS CONFIGURATION (REQUIRED IN PRODUCTION)
# =============================================================================
# Single Redis URL for both Celery broker and result backend
REDIS_URL=redis://:password@localhost:6379/0
# Individual Redis settings (alternative to REDIS_URL)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# =============================================================================
# CELERY CONFIGURATION (auto-configured from REDIS_URL)
# =============================================================================
# These are automatically set from REDIS_URL if not specified
CELERY_BROKER_URL=redis://:password@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:password@localhost:6379/0

# =============================================================================
# AI INTEGRATION (REQUIRED)
# =============================================================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# PAYMENT INTEGRATION (OPTIONAL)
# =============================================================================
STRIPE_SECRET_KEY=sk_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# =============================================================================
# FIREBASE INTEGRATION (OPTIONAL)
# =============================================================================
FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json
FIREBASE_CREDENTIALS_JSON={"your":"firebase_credentials_json_here"}
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# =============================================================================
# STORAGE CONFIGURATION (OPTIONAL)
# =============================================================================
STORAGE_BACKEND=local
S3_BUCKET=your-s3-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY=your_s3_access_key_here
S3_SECRET_KEY=your_s3_secret_key_here
S3_ENDPOINT_URL=https://s3.amazonaws.com

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_FILE_SIZE_MB=500
MAX_FILES_PER_USER_PER_DAY=20
UPLOAD_DIR=uploads

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# =============================================================================
# TRUSTED HOSTS (PRODUCTION)
# =============================================================================
TRUSTED_HOSTS=localhost,127.0.0.1,yourdomain.com,api.yourdomain.com

# =============================================================================
# MONITORING AND ALERTING (OPTIONAL)
# =============================================================================
ALERT_EMAIL_FROM=alerts@yourdomain.com
ALERT_EMAIL_TO=admin@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
MONITORING_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =============================================================================
# SYSTEM THRESHOLDS (OPTIONAL)
# =============================================================================
CPU_WARNING_THRESHOLD=80
CPU_CRITICAL_THRESHOLD=90
MEMORY_WARNING_THRESHOLD=85
MEMORY_CRITICAL_THRESHOLD=95
DISK_WARNING_THRESHOLD=85
DISK_CRITICAL_THRESHOLD=95
FAILED_JOBS_WARNING_THRESHOLD=10
ACTIVE_JOBS_WARNING_THRESHOLD=50

# =============================================================================
# STORAGE QUOTAS AND LIMITS (OPTIONAL)
# =============================================================================
MAX_TOTAL_STORAGE_GB=10
MAX_FILES_PER_USER=100
MAX_FILE_AGE_DAYS=30
TEMP_FILE_RETENTION_HOURS=24
PROCESSED_FILE_RETENTION_DAYS=7
USER_FILE_RETENTION_DAYS=30
CLEANUP_THRESHOLD_PERCENT=80
EMERGENCY_CLEANUP_THRESHOLD_PERCENT=95

# =============================================================================
# DEVELOPMENT OVERRIDES (DEVELOPMENT ONLY)
# =============================================================================
# Allow localhost in production (set to true only if needed)
ALLOW_LOCALHOST_IN_PROD=false
